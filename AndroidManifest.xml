<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.ffhs.esa.bewegungsmelder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ch.ffhs.esa.bewegungsmelder.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ch.ffhs.esa.bewegungsmelder.UserSettingActivity"
            android:label="@string/app_name" >
        </activity>

        <service
            android:name="ch.ffhs.esa.bewegungsmelder.LocationService"
            android:enabled="true"
            android:process=":ServiceProcess" >
        </service>
        <service
            android:name="ch.ffhs.esa.bewegungsmelder.MotionDetectionService"
            android:enabled="true"
            android:process=":ServiceProcess" >
        </service>
        <service
            android:name="ch.ffhs.esa.bewegungsmelder.ServerService"
            android:enabled="true"
            android:process=":ServiceProcess" >
        </service>

        <activity
            android:name="ch.ffhs.esa.bewegungsmelder.Kontakt"
            android:label="@string/title_activity_kontakt" >
        </activity>
        <activity
            android:name="ch.ffhs.esa.bewegungsmelder.KontaktMain"
            android:label="@string/title_activity_kontakt_main" >
        </activity>
        <activity
            android:name="ch.ffhs.esa.bewegungsmelder.AddContact"
            android:label="@string/title_activity_add_contact" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.ffhs.esa.bewegungsmelder.MainActivity" />
        </activity>
        <activity
            android:name="ch.ffhs.esa.bewegungsmelder.ZeigeKontaktliste"
            android:label="@string/title_activity_zeige_kontaktliste" >
        </activity>
        <activity
            android:name="ch.ffhs.esa.bewegungsmelder.KontaktListeTestActivity"
            android:label="@string/title_activity_kontakt_liste_test" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.ffhs.esa.bewegungsmelder.AddContact" />
        </activity>
        <activity
            android:name="ch.ffhs.esa.bewegungsmelder.KontaktManuellHinzu"
            android:label="@string/title_activity_kontakt_manuell_hinzu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.ffhs.esa.bewegungsmelder.AddContact" />
        </activity>
        <receiver android:name=".SMSReceiver" android:exported="true" >
            <intent-filter android:priority="999">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
