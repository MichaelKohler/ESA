<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bewegungsmeldermain"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />
    
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.bewegungsmeldermain.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.bewegungsmeldermain.UserSettingActivity"
            android:label="@string/app_name" >
        </activity>

        <service
            android:name="com.example.bewegungsmeldermain.LocationService"
            android:enabled="true"
            android:process=":ServiceProcess" >
        </service>
        <service
            android:name="com.example.bewegungsmeldermain.MotionDetectionService"
            android:enabled="true"
            android:process=":ServiceProcess" >
        </service>
        <service
            android:name="com.example.bewegungsmeldermain.ServerService"
            android:enabled="true"
            android:process=":ServiceProcess" >
        </service>

        <activity
            android:name="com.example.bewegungsmeldermain.DeveloperActivity"
            android:label="@string/title_activity_developer" >
        </activity>
        <activity
            android:name="com.example.bewegungsmeldermain.Kontakt"
            android:label="@string/title_activity_kontakt" >
        </activity>
        <activity
            android:name="com.example.bewegungsmeldermain.KontaktMain"
            android:label="@string/title_activity_kontakt_main" >
        </activity>
    </application>

</manifest>
